<Page x:Class="AnimalCrossing.Views.FishPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:model="using:AnimalCrossing.Models"
      xmlns:usercontrol="using:AnimalCrossing.UserControls"
      Style="{StaticResource PageStyle}"
      mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="Grid"
               x:Key="GridStyle">
            <!--<Setter Property="BorderBrush"
                    Value="Black" />
            <Setter Property="BorderThickness"
                    Value="1,1,0.5,1" />-->
        </Style>
    </Page.Resources>

    <Grid x:Name="ContentArea">
        <ListView ItemsSource="{x:Bind ViewModel.Fishes,Mode=OneWay}">
            <ListView.Header>
                <TextBlock Text="{x:Bind ViewModel.Fishes.Count,Mode=OneWay}" />
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:Fish">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0"
                              Style="{StaticResource GridStyle}">
                            <!--<Image Height="100">
                            <Image.Source>
                                <BitmapImage UriSource="{x:Bind English,Converter={StaticResource EnglishToIconConverter}}" />
                            </Image.Source>
                        </Image>-->
                            <TextBlock Text="{x:Bind Name}" />
                        </Grid>
                        <Grid Grid.Column="1"
                              Style="{StaticResource GridStyle}">
                            <TextBlock Text="{x:Bind English}" />
                        </Grid>
                        <Grid Grid.Column="2"
                              Style="{StaticResource GridStyle}">
                            <TextBlock Text="{x:Bind Japanese}" />
                        </Grid>
                        <Grid Grid.Column="3"
                              Style="{StaticResource GridStyle}">
                            <TextBlock Text="{x:Bind Price}" />
                        </Grid>
                        <Grid Grid.Column="4"
                              Style="{StaticResource GridStyle}">
                            <TextBlock Text="{x:Bind Position}" />
                        </Grid>
                        <Grid Grid.Column="5"
                              Style="{StaticResource GridStyle}">
                            <TextBlock Text="{x:Bind Shape}" />
                        </Grid>
                        <Grid Grid.Column="6"
                              Style="{StaticResource GridStyle}">
                            <TextBlock Text="{x:Bind Time}" />
                        </Grid>
                        <Grid Grid.Column="7"
                              Style="{StaticResource GridStyle}">
                            <usercontrol:AppearMonthControl AppearMonth="{x:Bind Hemisphere.North.Month.AppearMonth}" />
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</Page>
